{{> layout/header}}

    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">
                <h1 class="govuk-heading-xl">Search for multiple results</h1>
            </div>
        </div>
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <p class="govuk-body">Get a specific list of search results</p>
                <h3 class="govuk-heading-s">How to search for devices</h3>
                <p class="govuk-body">Add device information into the search box. You can use:</p>
                <ul class="govuk-list govuk-list--bullet">
                    <li>GMDN codes</li>
                    <li>device names</li>
                    <li>Manufacturers</li>
                    <li>UDI-DI codes</li>
                </ul>
                <div class="govuk-form-group">
                  <label class="govuk-label govuk-label--s" for="multiple-devices">
                    Enter list of devices
                  </label>
                  <span class="govuk-hint">The list must be separated by commas</span>
                  <textarea class="govuk-textarea" id="multiple-devices" name="multipleDevices" rows="10"></textarea>
                  <a href="multipleresults" class="govuk-button">Continue</a>
                </div>
            </div>
        </div>
    </main>

{{> layout/footer}}
