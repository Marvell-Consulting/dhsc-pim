{{> layout/header}}

  <main class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Tell us whats wrong with this data</h1>
        <p class="govuk-body">[Explanation of the process]</p>
        <p class="govuk-body">Flag will be requested from the manufacturer, they'll review, update info if incorrect, you'll be notified.</p>
        <form action="flagsubmitted">
          <div class="govuk-form-group">
          <fieldset class="govuk-fieldset" aria-describedby="contact-hint">
            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
              <h1 class="govuk-fieldset__heading">What information is wrong?</h1>
            </legend>
            <div id="contact-hint" class="govuk-hint"></div>

              
              <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                
                {{^ UDI_NUMBER }}  
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="contact" name="contact" type="checkbox" value="UDI_NUMBER" data-aria-controls="conditional-contact-UDI_NUMBER">
                    <label class="govuk-label govuk-label--s govuk-checkboxes__label" for="contact">
                      UDI-DI: 12345 12312 12321
                    </label>
                  </div>
                  <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden" id="conditional-contact-UDI_NUMBER">
                    <div class="govuk-form-group">
                      <label class="govuk-label govuk-label--s" for="contact-by-email">
                        Describe what's wrong
                      </label>
                      <textarea class="govuk-textarea" id="more-detail" name="moreDetail" rows="5" aria-describedby="more-detail-hint"></textarea>

                      <label class="govuk-label govuk-label--s" for="contact-by-email">
                        What should it be? (Optional)
                      </label>
                      <textarea class="govuk-textarea" id="more-detail" name="moreDetail" rows="5" aria-describedby="more-detail-hint"></textarea>
                    </div>
                  </div>
                {{/ UDI_NUMBER}}
            
                {{^ GMDN_CODE }}  
                  <div class="govuk-checkboxes__item">
                    <input class="govuk-checkboxes__input" id="contact" name="contact" type="checkbox" value="GMDN_CODE" data-aria-controls="conditional-contact-GMDN_CODE">
                    <label class="govuk-label govuk-label--s govuk-checkboxes__label" for="contact">
                      GMDN_CODE: {{# GMDN_CODE }} {{ . }} {{/GMDN_CODE}}
                    </label>
                  </div>
                  <div class="govuk-checkboxes__conditional govuk-checkboxes__conditional--hidden" id="conditional-contact-GMDN_CODE">
                    <div class="govuk-form-group">
                      <label class="govuk-label govuk-label--s" for="contact-by-email">
                        Describe what's wrong
                      </label>
                      <textarea class="govuk-textarea" id="more-detail" name="moreDetail" rows="5" aria-describedby="more-detail-hint"></textarea>

                      <label class="govuk-label govuk-label--s" for="contact-by-email">
                        What should it be? (Optional)
                      </label>
                      <textarea class="govuk-textarea" id="more-detail" name="moreDetail" rows="5" aria-describedby="more-detail-hint"></textarea>
                    </div>
                  </div>
                {{/ GMDN_CODE}}
            
                {{^ DEVICE_RISK_SUB_TYPE_DESC }}  
